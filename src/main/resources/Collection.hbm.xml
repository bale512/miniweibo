<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Collection" table="collection" schema="miniweibo">
        <id name="collectionId" column="collection_id"/>
        <property name="collectionTime" column="collection_time"/>
        <property name="collectionStatus" column="collection_status"/>
        <many-to-one name="userByUserId" class="pojo.User">
            <column name="user_id"/>
        </many-to-one>
        <many-to-one name="messageByMessageId" class="pojo.Message">
            <column name="message_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>